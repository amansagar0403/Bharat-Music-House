{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/HomeCarousel/mainCarousel.tsx",
    "src/app/customer/components/Navigation/Navigation.jsx",
    "src/app/customer/components/Auth/AuthModal.jsx"
, "src/app/customer/components/Auth/RegisterForm.jsx", "src/app/customer/components/Auth/LoginForm.jsx", "src/app/Ecommerce/page.jsx"  ],
  "exclude": ["node_modules"]
}
